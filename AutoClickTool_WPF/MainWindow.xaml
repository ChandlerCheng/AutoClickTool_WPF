<Window x:Class="AutoClickTool_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoClickTool_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <TabControl>
            <TabItem Name="testFunctionTab" Header="測試功能">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical" Width="80">
                            <Button Name="btnCurrentStatusCheck" Height="40" Click="btnCurrentStatusCheck_Click">當前狀態檢測</Button>
                            <Button Name="btnGetEnemyIndex" Height="40" Click="btnGetEnemyIndex_Click">取得怪物次序</Button>
                            <Button Name="btnGetEnemyIndexBmp" Height="40" Click="btnGetEnemyIndexBmp_Click">取得怪物點圖</Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </TabItem>            
        </TabControl>
    </Grid>
</Window>
